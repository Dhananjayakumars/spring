<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean class="com.xworkz.shop.service.ShopServiceImpl" id="shopServiceImpl">
	<constructor-arg ref="ShopDaoImpl"/>
	</bean>

	<bean class="com.xworkz.shop.Dao.ShopDaoImpl"
		id="ShopDaoImpl">
		<property name="factory" ref="localSessionFactoryBean"></property>
	</bean>
	<bean
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean"
		id="localSessionFactoryBean">
		<property name="configLocation" value="hibernate.cfg.xml" />
		<property name="dataSource" ref="driverManagerDataSource"></property>
	</bean>
	<bean
		class="org.springframework.jdbc.datasource.DriverManagerDataSource"
		id="driverManagerDataSource">
		<constructor-arg
			value="jdbc:mysql://localhost:3306/springjdbc" />
		<constructor-arg value="root" />
		<constructor-arg value="7090" />
		<property name="driverClassName"
			value="com.mysql.cj.jdbc.Driver"></property>

	</bean>

</beans>